########################################
# Backend Environment (sample)
########################################

# App
PORT=8000
NODE_ENV=development
NODE_ENVIRONMENT="development"

# Database / Auth
MONGODB_URL=
JWT_SECRET=

# CORS (comma-separated list of allowed origins)
# Include your local dev and deployed frontend URLs
CORS_ORIGINS=http://localhost:5173,https://your-frontend.onrender.com,https://your-frontend.netlify.app

# Cloudinary (media uploads)
CLOUDINARY_CLOUD_NAME=''
CLOUDINARY_API_KEY=''
CLOUDINARY_API_SECRET=''

# AI key (if using Gemini routes)
GOOGLE_GEMINI_KEY=

# Email (Gmail app password recommended)
EMAIL_USER=your_gmail_address@gmail.com
EMAIL_PASS=your_gmail_app_password
